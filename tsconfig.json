{
    "compilerOptions": {
        "module": "umd",
        "target": "es3",
        "noImplicitAny": false,
        "sourceMap": true,
        "allowJs": false,
        "watch": false,
        "listEmittedFiles": true,
        "listFiles": true,
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "outDir": "./dist",
        //"locale": "zh-cn",
        "rootDir": "./src"
    },
    //"compileOnSave": true,
    "exclude": [
        "node_modules", "dist", "./*.*", "test", "src/__test__/**"
    ]
}
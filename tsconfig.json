{
    "compilerOptions": {
        //"declaration": true,
        "module": "commonjs",
        "target": "es3",
        "moduleResolution":"node",
        "noImplicitAny": false,
        "sourceMap": true,
        "allowJs": false,
        "watch": false,
        "listEmittedFiles": true,
        "listFiles": false,
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        //"locale": "zh-cn",
        "rootDir": "./src"
    },
    //"compileOnSave": true,
    "exclude": [
        "node_modules", "dist", "./*.*", "test", "src/__test__/**", "src/output/**"
    ]
}